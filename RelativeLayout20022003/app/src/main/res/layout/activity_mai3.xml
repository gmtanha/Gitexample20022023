<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f40"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="1"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="#f40"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="2"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:background="#f40"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="3" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="#f40"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="4"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#f40"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="5"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="#f40"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="6"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/txt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:background="#f40"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="7" />
    <TextView
        android:id="@+id/txt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:background="#f40"
        android:textSize="35dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="8" />
    <TextView
        android:id="@+id/txt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:background="#f40"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="9" />
    <TextView
        android:id="@+id/txt10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:background="#f40"
        android:layout_below="@+id/txt6"
        android:layout_toStartOf="@id/txt6"
        android:textSize="35dp"
        android:text="10" />
    <TextView
        android:id="@+id/txt11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:background="#f40"
        android:layout_above="@+id/txt6"
        android:layout_toStartOf="@id/txt6"
        android:textSize="35dp"
        android:text="11" />
</RelativeLayout>